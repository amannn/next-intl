{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "next-intl#test": {
      "dependsOn": ["example-app-router-playground#lint"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**", "build/**"]
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "test": {
      "dependsOn": ["build"]
    },
    "size": {
      "dependsOn": ["build"]
    }
  }
}
