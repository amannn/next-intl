{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**/*.ts",
        "dist/**/*.tsx",
        "dist/**/*.mjs",
        "dist/**/*.js",
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "docs#build": {
      "dependsOn": ["^build"],
      "env": ["UMAMI_URL"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "test": {
      "dependsOn": ["build"]
    },
    "lint": {}
  }
}
