{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**", "build/**"]
    },
    "test": {
      "dependsOn": ["build"]
    },
    "size": {
      "dependsOn": ["build"]
    },
    "lint": {}
  }
}
