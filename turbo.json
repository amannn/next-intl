{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**",
        "build/**",
        "target/wasm32-wasip1/release/*.wasm"
      ]
    },
    "next-intl#build": {
      "dependsOn": ["use-intl#build", "tools#build"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "example-app-router-playground#lint": {
      "dependsOn": ["example-app-router-playground#build"]
    },
    "test": {
      "dependsOn": ["build"]
    },
    "size": {
      "dependsOn": ["build"]
    }
  }
}
