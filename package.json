{
  "name": "root",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "build:packages": "turbo run build --filter './packages/**'",
    "install:ci": "pnpm install && pnpm run build:packages --force",
    "install:dev": "pnpm install && pnpm run build:packages",
    "publish": "lerna publish --yes --no-verify-access"
  },
  "devDependencies": {
    "lerna": "^4.0.0",
    "turbo": "^1.9.3"
  }
}
