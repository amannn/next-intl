{
  "name": "use-intl",
  "version": "2.17.0",
  "sideEffects": false,
  "author": "Jan Amann <jan@amann.work>",
  "description": "Minimal, but complete solution for managing internationalization in React apps.",
  "license": "MIT",
  "homepage": "https://next-intl-docs.vercel.app/",
  "repository": {
    "type": "git",
    "url": "https://github.com/amannn/next-intl/tree/main/packages/use-intl"
  },
  "scripts": {
    "build": "tsup",
    "test": "TZ=Europe/Berlin vitest",
    "lint": "eslint src test && tsc --noEmit",
    "prepublishOnly": "turbo test && turbo lint && turbo build"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "typings": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "keywords": [
    "react",
    "intl",
    "i18n",
    "internationalization",
    "localization",
    "translate",
    "translation",
    "format",
    "formatting"
  ],
  "dependencies": {
    "@formatjs/ecma402-abstract": "^1.11.4",
    "intl-messageformat": "^9.3.18"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0"
  },
  "devDependencies": {
    "@testing-library/react": "^13.0.0",
    "@types/node": "^17.0.23",
    "@types/react": "^18.2.5",
    "date-fns": "^2.16.1",
    "eslint": "^8.39.0",
    "eslint-config-molindo": "^6.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tslib": "^2.3.1",
    "tsup": "^7.1.0",
    "typescript": "^4.9.5",
    "vitest": "^0.32.2"
  },
  "engines": {
    "node": ">=10"
  }
}
