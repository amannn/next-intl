{
  "name": "next-intl",
  "version": "3.1.3",
  "sideEffects": false,
  "author": "Jan Amann <jan@amann.work>",
  "description": "A minimal, but complete solution for internationalization in Next.js apps.",
  "license": "MIT",
  "homepage": "https://next-intl-docs.vercel.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/amannn/next-intl"
  },
  "scripts": {
    "build": "rm -rf dist && rollup -c",
    "test": "TZ=Europe/Berlin vitest",
    "lint": "eslint src test && tsc --noEmit",
    "prepublishOnly": "CI=true turbo test && turbo lint && turbo build && cp ../../README.md .",
    "postpublish": "git checkout . && rm ./README.md",
    "size": "size-limit"
  },
  "main": "./dist/index.react-client.js",
  "module": "./dist/esm/index.react-client.js",
  "typings": "./dist/types/src/index.react-client.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/src/index.react-client.d.ts",
      "react-server": "./dist/esm/index.react-server.js",
      "default": "./dist/index.react-client.js"
    },
    "./server": {
      "types": "./server.d.ts",
      "default": "./dist/esm/server.js"
    },
    "./config": {
      "types": "./config.d.ts",
      "default": "./dist/config.js"
    },
    "./middleware": {
      "types": "./middleware.d.ts",
      "default": "./dist/middleware.js"
    },
    "./navigation": {
      "types": "./navigation.d.ts",
      "react-server": "./dist/esm/navigation.react-server.js",
      "default": "./dist/navigation.react-client.js"
    },
    "./plugin": {
      "types": "./plugin.d.ts",
      "default": "./dist/plugin.js"
    }
  },
  "files": [
    "dist",
    "server.d.ts",
    "navigation.d.ts",
    "middleware.d.ts",
    "plugin.d.ts",
    "config.d.ts"
  ],
  "keywords": [
    "react",
    "intl",
    "i18n",
    "internationalization",
    "localization",
    "translate",
    "translation",
    "format",
    "formatting",
    "next",
    "next.js"
  ],
  "dependencies": {
    "@formatjs/intl-localematcher": "^0.2.32",
    "negotiator": "^0.6.3",
    "use-intl": "^3.1.3"
  },
  "peerDependencies": {
    "next": "^10.0.0 || ^11.0.0 || ^12.0.0 || ^13.0.0 || ^14.0.0",
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0"
  },
  "devDependencies": {
    "@edge-runtime/vm": "^3.1.3",
    "@size-limit/preset-big-lib": "^8.2.6",
    "@testing-library/react": "^13.0.0",
    "@types/negotiator": "^0.6.1",
    "@types/node": "^17.0.23",
    "@types/react": "18.2.34",
    "eslint": "^8.46.0",
    "eslint-config-molindo": "^7.0.0",
    "eslint-plugin-deprecation": "^1.4.1",
    "next": "14.0.3",
    "path-to-regexp": "^6.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^3.28.1",
    "rollup-plugin-preserve-directives": "0.2.0",
    "size-limit": "^8.2.6",
    "typescript": "^5.2.2",
    "vitest": "^0.32.2"
  },
  "size-limit": [
    {
      "path": "dist/production/index.react-client.js",
      "limit": "12.81 KB"
    },
    {
      "path": "dist/production/index.react-server.js",
      "limit": "13.57 KB"
    },
    {
      "path": "dist/production/navigation.react-client.js",
      "limit": "2.6 KB"
    },
    {
      "path": "dist/production/navigation.react-server.js",
      "limit": "2.75 KB"
    },
    {
      "path": "dist/production/server.js",
      "limit": "13.2 kB"
    },
    {
      "path": "dist/production/middleware.js",
      "limit": "5.72 KB"
    }
  ]
}
