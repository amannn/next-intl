{
  "name": "next-intl",
  "version": "2.17.1",
  "sideEffects": false,
  "author": "Jan Amann <jan@amann.work>",
  "description": "A minimal, but complete solution for internationalization in Next.js apps.",
  "license": "MIT",
  "homepage": "https://next-intl-docs.vercel.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/amannn/next-intl"
  },
  "scripts": {
    "build": "tsup",
    "test": "TZ=Europe/Berlin vitest",
    "lint": "eslint src test && tsc --noEmit",
    "prepublishOnly": "CI=true turbo test && turbo lint && turbo build && cp ../../README.md .",
    "postpublish": "git checkout . && rm ./README.md"
  },
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "exports": {
    ".": {
      "react-server": {
        "default": "./dist/react-server/index.js"
      },
      "default": "./dist/index.js"
    },
    "./server": {
      "react-server": {
        "default": "./dist/server/index.js"
      },
      "default": "./dist/server/react-client/index.js"
    },
    "./client": {
      "default": "./dist/client/index.js"
    },
    "./link": {
      "types": "./link.d.ts",
      "react-server": {
        "default": "./dist/link/react-server/index.js"
      },
      "default": "./dist/link/index.js"
    },
    "./config": "./config.js",
    "./middleware": {
      "types": "./middleware.d.ts",
      "default": "./dist/middleware/index.js"
    },
    "./withNextIntl": "./withNextIntl.js",
    "./plugin": "./plugin.js"
  },
  "files": [
    "dist",
    "src",
    "server.d.ts",
    "client.d.ts",
    "link.d.ts",
    "config.js",
    "middleware.d.ts",
    "withNextIntl.js",
    "withNextIntl.d.ts",
    "plugin.js",
    "plugin.d.ts"
  ],
  "keywords": [
    "react",
    "intl",
    "i18n",
    "internationalization",
    "localization",
    "translate",
    "translation",
    "format",
    "formatting",
    "next",
    "next.js"
  ],
  "dependencies": {
    "@formatjs/intl-localematcher": "^0.2.32",
    "negotiator": "^0.6.3",
    "server-only": "0.0.1",
    "use-intl": "^2.17.1"
  },
  "peerDependencies": {
    "next": "^10.0.0 || ^11.0.0 || ^12.0.0 || ^13.0.0",
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0"
  },
  "devDependencies": {
    "@testing-library/react": "^13.0.0",
    "@types/negotiator": "^0.6.1",
    "@types/node": "^17.0.23",
    "@types/react": "^18.2.5",
    "eslint": "^8.39.0",
    "eslint-config-molindo": "^6.0.0",
    "eslint-plugin-deprecation": "^1.4.1",
    "next": "^13.4.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^7.1.0",
    "typescript": "^4.9.5",
    "vitest": "^0.32.2"
  },
  "engines": {
    "node": ">=10"
  }
}
