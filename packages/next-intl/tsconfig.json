{
  "extends": "eslint-config-molindo/tsconfig.json",
  "include": ["src", "test", "__mocks__", "types", "next-env.d.ts"],
  "compilerOptions": {
    "allowImportingTsExtensions": true, // For ESM
    "lib": ["dom", "esnext"],
    "target": "ES2020",
    "declaration": true,
    "rootDir": ".",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "noEmit": true
  }
}
