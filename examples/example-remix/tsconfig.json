{
  "extends": "eslint-config-molindo/tsconfig.json",
  "include": ["remix.env.d.ts", "**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2019"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2019",
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "~/*": ["./app/*"]
    },
    "noEmit": true,
    "allowJs": true
  }
}
